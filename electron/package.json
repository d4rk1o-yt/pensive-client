{
  "name": "pensive-desktop",
  "version": "0.2.6",
  "description": "This is a end-to-end encrypted messaging platform. Your messages can't be seen by third parties.",
  "main": "index.js",
  "repository": "https://github.com/d4rk1o-yt/pensive-client.git",
  "scripts": {
    "electron:start": "electron ./",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --x64 --windows",
    "gh-publish": "electron-builder --x64 --windows -p always",
    "release": "build"
  },
  "build": {
    "appId": "ml.connordavis.pensive",
    "productName": "Pensive",
    "asar": true,
    "win": {
      "target": "squirrel",
      "icon": "build/icon.ico",
      "publish": ["github"]
    }
  },
  "dependencies": {
    "@capacitor/electron": "^1.5.1",
    "custom-electron-titlebar": "^3.2.2-hotfix62",
    "electron-builder-squirrel-windows": "^22.4.1",
    "electron-installer-squirrel-windows": "^1.3.0",
    "electron-is-dev": "^1.1.0",
    "electron-log": "^4.1.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^4.2.5"
  },
  "devDependencies": {
    "electron": "^7.0.0",
    "electron-builder": "^22.4.1"
  },
  "keywords": [
    "capacitor",
    "electron"
  ],
  "author": "Connor Davis",
  "license": "ISC"
}
